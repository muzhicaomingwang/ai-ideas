/** index.wxss **/
.header {
  width: 100%;
  margin-bottom: 40px;
  margin-top: 20px;
}

.title {
  font-size: 32px;
  font-weight: 800;
  color: var(--primary-color);
  line-height: 1.2;
  display: block;
  margin-bottom: 10px;
}

.subtitle {
  font-size: 16px;
  color: var(--text-secondary);
}

.form-card {
  padding: 0 24px;
}

.form-item {
  padding: 24px 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.label {
  font-size: 16px;
  font-weight: 600;
  color: var(--text-main);
  min-width: 60px;
}

.input, .picker-value {
  text-align: right;
  font-size: 16px;
  color: var(--text-main);
  flex: 1;
}

.placeholder {
  color: #c7c7c7;
}

.divider {
  height: 1px;
  background-color: #f0f0f0;
  width: 100%;
}

.btn-primary {
  margin-top: 40px;
  box-shadow: 0 8px 20px rgba(44, 44, 44, 0.2);
}
