<view class="container">
  <view class="header">
    <text class="title">开启你的\n下一段旅程</text>
    <text class="subtitle">输入你的偏好，为你生成专属行程</text>
  </view>

  <view class="card form-card">
    <view class="form-item">
      <text class="label">目的地</text>
      <input class="input" placeholder="例如：京都" placeholder-class="placeholder" bindinput="onDestinationInput" />
    </view>
    
    <view class="divider"></view>

    <view class="form-item">
      <text class="label">天数</text>
      <picker mode="selector" range="{{daysRange}}" bindchange="onDaysChange">
        <view class="picker-value {{days ? '' : 'placeholder'}}">
          {{days ? days + ' 天' : '请选择天数'}}
        </view>
      </picker>
    </view>

    <view class="divider"></view>

    <view class="form-item">
      <text class="label">预算</text>
      <input class="input" type="number" placeholder="例如：5000" placeholder-class="placeholder" bindinput="onBudgetInput" />
    </view>
  </view>

  <button class="btn-primary" bindtap="generatePlan">生成规划</button>
</view>
