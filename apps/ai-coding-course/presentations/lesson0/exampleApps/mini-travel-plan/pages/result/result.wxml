<view class="container">
  <view class="header">
    <text class="title">{{destination}} {{days}}日游</text>
    <text class="subtitle">预算约 ¥{{budget}} / 人</text>
  </view>

  <scroll-view scroll-y class="timeline">
    <block wx:for="{{itinerary}}" wx:key="day">
      <view class="day-header">
        <view class="day-badge">DAY {{item.day}}</view>
        <view class="day-line"></view>
      </view>
      
      <view class="card day-card">
        <view class="activity-item">
          <view class="time-tag morning">上午</view>
          <text class="activity-content">{{item.morning}}</text>
        </view>
        <view class="divider"></view>
        <view class="activity-item">
          <view class="time-tag afternoon">下午</view>
          <text class="activity-content">{{item.afternoon}}</text>
        </view>
        <view class="divider"></view>
        <view class="activity-item">
          <view class="time-tag evening">晚上</view>
          <text class="activity-content">{{item.evening}}</text>
        </view>
      </view>
    </block>
  </scroll-view>

  <button class="btn-primary" bindtap="goBack">重新规划</button>
</view>
