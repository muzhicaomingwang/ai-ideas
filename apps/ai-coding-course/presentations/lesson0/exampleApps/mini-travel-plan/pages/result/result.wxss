/** result.wxss **/
.header {
  width: 100%;
  margin-bottom: 30px;
  text-align: center;
}

.title {
  font-size: 28px;
  font-weight: 800;
  color: var(--primary-color);
  display: block;
  margin-bottom: 8px;
}

.subtitle {
  font-size: 16px;
  color: var(--accent-color);
  font-weight: 600;
  background: rgba(7, 193, 96, 0.1);
  padding: 4px 12px;
  border-radius: 20px;
}

.timeline {
  width: 100%;
  padding-bottom: 20px;
}

.day-header {
  display: flex;
  align-items: center;
  margin-bottom: 16px;
  padding: 0 4px;
}

.day-badge {
  background: var(--primary-color);
  color: #fff;
  font-weight: 800;
  padding: 4px 12px;
  border-radius: 8px;
  font-size: 14px;
  margin-right: 12px;
}

.day-line {
  flex: 1;
  height: 2px;
  background: #e0e0e0;
  border-radius: 2px;
}

.day-card {
  padding: 0;
  overflow: hidden;
}

.activity-item {
  padding: 20px;
  display: flex;
  align-items: flex-start;
}

.time-tag {
  font-size: 12px;
  font-weight: 700;
  padding: 2px 8px;
  border-radius: 4px;
  margin-right: 16px;
  min-width: 40px;
  text-align: center;
}

.morning { background: #e3f2fd; color: #1565c0; }
.afternoon { background: #fff3e0; color: #ef6c00; }
.evening { background: #f3e5f5; color: #7b1fa2; }

.activity-content {
  font-size: 15px;
  color: var(--text-main);
  line-height: 1.6;
  flex: 1;
}

.divider {
  height: 1px;
  background-color: #f5f5f5;
  margin: 0 20px;
}

.btn-primary {
  margin-top: 20px;
  margin-bottom: 40px;
}
