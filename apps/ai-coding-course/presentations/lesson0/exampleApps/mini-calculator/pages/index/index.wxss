page {
  height: 100%;
  background-color: #000;
  color: #fff;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  padding-bottom: 30rpx;
}

.screen {
  text-align: right;
  padding-right: 40rpx;
  margin-bottom: 30rpx;
}

.result {
  font-size: 160rpx;
  font-weight: 300;
}

.btn-group {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

.btn {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background-color: #333;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
  margin: 10rpx;
}

.btn.zero {
  width: 340rpx;
  border-radius: 80rpx;
  justify-content: flex-start;
  padding-left: 60rpx;
}

.btn.orange {
  background-color: #f09a37;
  color: #fff;
}

.btn.gray {
  background-color: #a6a6a6;
  color: #000;
}

.btn:active {
  opacity: 0.7;
}
