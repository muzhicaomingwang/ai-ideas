/* 设置页面整体样式 */
page {
  height: 100%; /* 页面高度占满屏幕 */
  background-color: #000; /* 背景颜色为黑色 */
  color: #fff; /* 文字颜色为白色 */
}

/* 容器样式 */
.container {
  height: 100%; /* 容器高度占满屏幕 */
  display: flex; /* 使用 Flex 布局 */
  flex-direction: column; /* 垂直排列子元素 */
  justify-content: flex-end; /* 内容底部对齐 */
  padding-bottom: 30rpx; /* 底部内边距 */
}

/* 屏幕区域样式 */
.screen {
  text-align: right; /* 文字右对齐 */
  padding-right: 40rpx; /* 右侧内边距 */
  margin-bottom: 30rpx; /* 底部外边距 */
}

/* 结果文本样式 */
.result {
  font-size: 160rpx; /* 字体大小 */
  font-weight: 300; /* 字体粗细 */
}

/* 按钮组样式 */
.btn-group {
  display: flex; /* 使用 Flex 布局 */
  flex-wrap: wrap; /* 允许换行 */
  justify-content: center; /* 水平居中对齐 */
}

/* 通用按钮样式 */
.btn {
  width: 160rpx; /* 按钮宽度 */
  height: 160rpx; /* 按钮高度 */
  border-radius: 50%; /* 圆形按钮 */
  background-color: #333; /* 默认背景色（深灰） */
  display: flex; /* 使用 Flex 布局 */
  align-items: center; /* 垂直居中 */
  justify-content: center; /* 水平居中 */
  font-size: 60rpx; /* 字体大小 */
  margin: 10rpx; /* 按钮间距 */
}

/* 0号按钮特殊样式（宽按钮） */
.btn.zero {
  width: 340rpx; /* 宽度为普通按钮的两倍多一点 */
  border-radius: 80rpx; /* 圆角半径 */
  justify-content: flex-start; /* 内容左对齐 */
  padding-left: 60rpx; /* 左侧内边距 */
}

/* 橙色按钮样式（运算符） */
.btn.orange {
  background-color: #f09a37; /* 橙色背景 */
  color: #fff; /* 白色文字 */
}

/* 灰色按钮样式（功能键） */
.btn.gray {
  background-color: #a6a6a6; /* 浅灰色背景 */
  color: #000; /* 黑色文字 */
}

/* 按钮点击时的按压效果 */
.btn:active {
  opacity: 0.7; /* 点击时透明度降低 */
}
