# ========== 必需配置 ==========

# ElevenLabs API密钥（TTS语音合成）
ELEVENLABS_API_KEY=your_elevenlabs_api_key

# Google Gemini API密钥（AI分析和脚本生成）
GOOGLE_API_KEY=your_google_api_key

# ========== 可选配置 ==========

# OpenAI API密钥（备选AI模型）
OPENAI_API_KEY=your_openai_api_key

# AI提供商选择（gemini/openai）
AI_PROVIDER=gemini

# TTS语速（0.7-1.2，1.0为正常速度）
TTS_SPEED=1.2  # 小雅（珊珊）和植萌都使用1.2倍速

# 日志级别（DEBUG/INFO/WARNING/ERROR）
LOG_LEVEL=INFO

# 浏览器无头模式（true/false）
HEADLESS=true
