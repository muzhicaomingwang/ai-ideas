{
  "env": {
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "standard"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "globals": {
    "wx": "readonly",
    "getApp": "readonly",
    "getCurrentPages": "readonly",
    "Page": "readonly",
    "Component": "readonly",
    "App": "readonly"
  },
  "rules": {
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "semi": ["error", "never"],
    "space-before-function-paren": ["error", "never"],
    "no-unused-vars": ["warn"],
    "no-console": "off",
    "camelcase": ["error", { "properties": "never", "allow": ["^user_", "^plan_", "^departure_", "^budget_", "^people_", "^start_", "^end_", "^session", "^avatar"] }],
    "prefer-promise-reject-errors": "off",
    "brace-style": ["error", "1tbs", { "allowSingleLine": true }],
    "multiline-ternary": "off",
    "operator-linebreak": "off"
  }
}
