/**app.wxss**/
/* 全局样式 */

page {
  background-color: #f5f5f5;
  font-family: -apple-system-font, "Helvetica Neue", "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", sans-serif;
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
}

/* 容器 */
.container {
  padding: 32rpx;
  box-sizing: border-box;
}

/* 卡片 */
.card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

/* 按钮 */
.btn-primary {
  background-color: #1890ff;
  color: #fff;
  border-radius: 8rpx;
  font-size: 32rpx;
  font-weight: 500;
  text-align: center;
  padding: 24rpx 48rpx;
  border: none;
}

.btn-primary:active {
  background-color: #0070dd;
}

.btn-secondary {
  background-color: #fff;
  color: #1890ff;
  border: 2rpx solid #1890ff;
  border-radius: 8rpx;
  font-size: 32rpx;
  text-align: center;
  padding: 24rpx 48rpx;
}

.btn-secondary:active {
  background-color: #f0f8ff;
}

.btn-disabled {
  background-color: #d9d9d9;
  color: #999;
  border: none;
}

/* 文本 */
.text-primary {
  color: #1890ff;
}

.text-secondary {
  color: #666;
}

.text-muted {
  color: #999;
}

.text-success {
  color: #52c41a;
}

.text-warning {
  color: #faad14;
}

.text-danger {
  color: #f5222d;
}

.text-center {
  text-align: center;
}

.text-right {
  text-align: right;
}

.text-bold {
  font-weight: 500;
}

/* 标题 */
.title-large {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.4;
}

.title-medium {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
  line-height: 1.4;
}

.title-small {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  line-height: 1.4;
}

/* 间距 */
.mt-8 { margin-top: 8rpx; }
.mt-16 { margin-top: 16rpx; }
.mt-24 { margin-top: 24rpx; }
.mt-32 { margin-top: 32rpx; }
.mt-48 { margin-top: 48rpx; }

.mb-8 { margin-bottom: 8rpx; }
.mb-16 { margin-bottom: 16rpx; }
.mb-24 { margin-bottom: 24rpx; }
.mb-32 { margin-bottom: 32rpx; }
.mb-48 { margin-bottom: 48rpx; }

.ml-8 { margin-left: 8rpx; }
.ml-16 { margin-left: 16rpx; }
.ml-24 { margin-left: 24rpx; }

.mr-8 { margin-right: 8rpx; }
.mr-16 { margin-right: 16rpx; }
.mr-24 { margin-right: 24rpx; }

.p-16 { padding: 16rpx; }
.p-24 { padding: 24rpx; }
.p-32 { padding: 32rpx; }

/* 布局 */
.flex {
  display: flex;
}

.flex-row {
  display: flex;
  flex-direction: row;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.flex-center {
  display: flex;
  justify-content: center;
  align-items: center;
}

.flex-between {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.flex-around {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.flex-1 {
  flex: 1;
}

.flex-wrap {
  flex-wrap: wrap;
}

/* 边框 */
.border-top {
  border-top: 1rpx solid #e8e8e8;
}

.border-bottom {
  border-bottom: 1rpx solid #e8e8e8;
}

/* 标签 */
.tag {
  display: inline-block;
  padding: 8rpx 16rpx;
  background-color: #f0f0f0;
  color: #666;
  border-radius: 4rpx;
  font-size: 24rpx;
  margin-right: 12rpx;
  margin-bottom: 12rpx;
}

.tag-primary {
  background-color: #e6f7ff;
  color: #1890ff;
}

.tag-success {
  background-color: #f6ffed;
  color: #52c41a;
}

.tag-warning {
  background-color: #fffbe6;
  color: #faad14;
}

/* 分割线 */
.divider {
  height: 1rpx;
  background-color: #e8e8e8;
  margin: 24rpx 0;
}

/* 加载中 */
.loading {
  text-align: center;
  padding: 48rpx 0;
  color: #999;
}

/* 空状态 */
.empty {
  text-align: center;
  padding: 96rpx 0;
  color: #999;
}

.empty-icon {
  font-size: 96rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}
