/* pages/myplans/myplans.wxss */
.myplans-page {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* Tab 栏样式 */
.tabs-container {
  display: flex;
  background: #fff;
  padding: 16rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  position: sticky;
  top: 0;
  z-index: 100;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
  transition: all 0.2s ease;
}

.tab-item.active {
  color: #1890ff;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 48rpx;
  height: 4rpx;
  background: #1890ff;
  border-radius: 2rpx;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 80vh;
}

.loading-icon {
  font-size: 96rpx;
  margin-bottom: 24rpx;
  animation: rotate 2s linear infinite;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 80vh;
  padding: 0 64rpx;
}

.empty-icon {
  font-size: 160rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 48rpx;
}

.btn-create {
  width: 400rpx;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #1890ff;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
}

.btn-create::after {
  border: none;
}

.btn-create:active {
  background-color: #0070dd;
}

/* 方案列表 */
.plans-list {
  padding: 24rpx 32rpx 48rpx;
}

/* 方案卡片 */
.plan-card {
  position: relative;
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.card-content {
  padding: 32rpx;
  position: relative;
  z-index: 2;
  background-color: #fff;
  transition: transform 0.3s ease;
}

/* 卡片头部 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.plan-logo {
  width: 84rpx;
  height: 84rpx;
  border-radius: 14rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
  background: #f5f5f5;
}

.plan-title {
  flex: 1;
  margin-right: 16rpx;
}

.plan-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.plan-id {
  display: block;
  margin-top: 8rpx;
  font-size: 22rpx;
  color: #999;
  line-height: 1.2;
}

.plan-version {
  display: inline-block;
  margin-top: 8rpx;
  padding: 4rpx 10rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  font-weight: 700;
  color: #1890ff;
  background: rgba(24, 144, 255, 0.12);
}

.status-badge {
  padding: 8rpx 16rpx;
  border-radius: 4rpx;
  font-size: 24rpx;
  white-space: nowrap;
  flex-shrink: 0;
}

.status-draft {
  background-color: #f0f0f0;
  color: #666;
}

.status-confirmed {
  background-color: #f6ffed;
  color: #52c41a;
}

.status-cancelled {
  background-color: #fff1f0;
  color: #f5222d;
}

.status-generating {
  background-color: #e6f7ff;
  color: #1890ff;
}

.status-failed {
  background-color: #fff1f0;
  color: #f5222d;
}

.generating-icon {
  margin-right: 4rpx;
  animation: pulse 1.5s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}

/* 生成中卡片样式 */
.generating-card {
  background: linear-gradient(135deg, #f0f9ff 0%, #e6f7ff 100%);
  border-left: 6rpx solid #1890ff;
}

/* 失败卡片样式 */
.failed-card {
  background: linear-gradient(135deg, #fff5f5 0%, #fff1f0 100%);
  border-left: 6rpx solid #f5222d;
}

/* 失败信息区域 */
.failed-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 20rpx;
  background-color: rgba(245, 34, 45, 0.06);
  border-radius: 12rpx;
}

.failed-message {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.failed-icon {
  font-size: 28rpx;
}

.failed-text {
  font-size: 24rpx;
  color: #f5222d;
}

/* 重试按钮 */
.retry-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 20rpx;
  background-color: #f5222d;
  border-radius: 24rpx;
  flex-shrink: 0;
}

.retry-icon {
  font-size: 24rpx;
}

.retry-text {
  font-size: 24rpx;
  color: #fff;
}

/* 生成中信息区域 */
.generating-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 20rpx;
  background-color: rgba(24, 144, 255, 0.06);
  border-radius: 12rpx;
}

.generating-progress {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.progress-dots {
  display: flex;
  gap: 8rpx;
}

.progress-dot {
  width: 10rpx;
  height: 10rpx;
  background-color: #1890ff;
  border-radius: 50%;
  animation: wave 1.4s ease-in-out infinite;
}

.progress-dot:nth-child(1) {
  animation-delay: 0s;
}

.progress-dot:nth-child(2) {
  animation-delay: 0.2s;
}

.progress-dot:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes wave {
  0%, 60%, 100% {
    transform: scale(1);
    opacity: 1;
  }
  30% {
    transform: scale(1.5);
    opacity: 0.6;
  }
}

.generating-text {
  font-size: 24rpx;
  color: #1890ff;
}

/* 刷新按钮 */
.refresh-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 20rpx;
  background-color: #1890ff;
  border-radius: 24rpx;
  flex-shrink: 0;
}

.refresh-btn.refreshing {
  opacity: 0.7;
}

.refresh-icon {
  font-size: 24rpx;
}

.refresh-icon.rotating {
  animation: rotate 1s linear infinite;
}

.refresh-text {
  font-size: 24rpx;
  color: #fff;
}

/* 出发城市信息 */
.plan-location {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  padding: 12rpx 16rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
}

.location-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.location-text {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.location-date {
  font-size: 24rpx;
  color: #666;
  margin-left: 16rpx;
}

/* 统计信息 */
.plan-stats {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.stat-item {
  display: flex;
  align-items: center;
}

.stat-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}

.stat-text {
  font-size: 26rpx;
  color: #666;
}

.stat-divider {
  margin: 0 16rpx;
  color: #e8e8e8;
  font-size: 24rpx;
}

/* 日期 */
.plan-date {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
}

/* 相对时间 */
.plan-time {
  font-size: 24rpx;
  color: #999;
}

/* 操作按钮容器 */
.action-btns {
  position: absolute;
  right: 0;
  top: 0;
  bottom: 0;
  width: 120rpx;
  display: flex;
  flex-direction: column;
  z-index: 1;
}

/* 归档按钮 */
.archive-btn {
  flex: 1;
  background-color: #1890ff;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

/* 删除按钮 */
.delete-btn {
  flex: 1;
  background-color: #f5222d;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

/* 加载更多 */
.load-more {
  padding: 32rpx 0;
  text-align: center;
}

.load-more-text {
  font-size: 26rpx;
  color: #999;
}

.load-more-loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  font-size: 26rpx;
  color: #999;
}

.loading-dots {
  display: flex;
  gap: 12rpx;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  background-color: #1890ff;
  border-radius: 50%;
  animation: bounce 1.4s infinite ease-in-out both;
}

.dot:nth-child(1) {
  animation-delay: -0.32s;
}

.dot:nth-child(2) {
  animation-delay: -0.16s;
}

@keyframes bounce {
  0%, 80%, 100% {
    transform: scale(0);
  }
  40% {
    transform: scale(1);
  }
}

/* 没有更多 */
.no-more {
  padding: 32rpx 0;
  text-align: center;
  font-size: 26rpx;
  color: #999;
}
