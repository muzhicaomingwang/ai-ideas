/* pages/login/login.wxss */
.login-page {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 100rpx 60rpx 80rpx;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

/* Logo 和标题 */
.header {
  text-align: center;
  margin-bottom: 100rpx;
  padding-top: 40rpx;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin: 0 auto 40rpx;
  border-radius: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
  background: linear-gradient(135deg, #1890ff 0%, #096dd9 100%);
  display: flex;
  align-items: center;
  justify-content: center;
}

.logo-text {
  font-size: 64rpx;
  font-weight: 700;
  color: #fff;
  letter-spacing: 2rpx;
}

.title {
  font-size: 56rpx;
  font-weight: 700;
  color: #fff;
  margin-bottom: 20rpx;
  letter-spacing: 2rpx;
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.95);
  letter-spacing: 1rpx;
  font-weight: 400;
}

/* 功能亮点 */
.features {
  background-color: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 56rpx 48rpx;
  margin-bottom: 100rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.feature-item {
  display: flex;
  align-items: center;
  padding: 28rpx 0;
  min-height: 80rpx;
}

.feature-item:not(:last-child) {
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 4rpx;
}

.feature-icon {
  font-size: 52rpx;
  margin-right: 32rpx;
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.feature-text {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  line-height: 1.4;
  flex: 1;
}

/* 登录按钮 */
.login-section {
  margin-bottom: 56rpx;
  margin-top: auto;
}

.btn-wechat-login,
.btn-continue {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  border-radius: 50rpx;
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  border: none;
  letter-spacing: 1rpx;
}

.btn-wechat-login::after,
.btn-continue::after {
  border: none;
}

.wechat-icon {
  font-size: 40rpx;
  margin-right: 12rpx;
}

.btn-continue {
  background-color: #1890ff;
  color: #fff;
}

/* 用户协议 */
.agreement {
  text-align: center;
  padding: 0 20rpx;
  margin-bottom: 40rpx;
}

.agreement-label {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  color: rgba(255, 255, 255, 0.95);
  font-size: 24rpx;
}

.agreement-text {
  margin-left: 12rpx;
  line-height: 1.8;
}

.link {
  color: #fff;
  text-decoration: underline;
  font-weight: 500;
}

/* 用户信息表单 */
.user-form {
  background-color: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 56rpx 48rpx;
  margin-bottom: 60rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  margin-top: auto;
}

.form-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  text-align: center;
  margin-bottom: 48rpx;
}

.form-item {
  margin-bottom: 40rpx;
}

.form-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
  font-weight: 500;
}

/* 头像选择 */
.avatar-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0 20rpx;
  background: #f8f8f8;
  border-radius: 16rpx;
  border: none;
}

.avatar-wrapper::after {
  border: none;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: #e8e8e8;
  margin-bottom: 16rpx;
}

.avatar-tip {
  font-size: 24rpx;
  color: #999;
}

/* 昵称输入 */
.nickname-input {
  width: 100%;
  height: 88rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  color: #333;
  box-sizing: border-box;
}

/* 完成按钮 */
.btn-complete {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 12rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  margin-top: 32rpx;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.4);
}

.btn-complete::after {
  border: none;
}

/* 装饰圆圈 */
.decoration-circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  z-index: 0;
}

.decoration-circle-1 {
  width: 400rpx;
  height: 400rpx;
  top: -200rpx;
  right: -100rpx;
}

.decoration-circle-2 {
  width: 300rpx;
  height: 300rpx;
  bottom: 100rpx;
  left: -150rpx;
}
