/* pages/home/home.wxss */
.home-page {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 20rpx;
}

/* 自定义导航栏 */
.custom-navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  z-index: 1000;
}

.status-bar {
  width: 100%;
}

.navbar-content {
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  padding: 0 32rpx;
}

.navbar-title {
  font-size: 34rpx;
  font-weight: 600;
  color: white;
}

.navbar-user {
  position: absolute;
  right: 32rpx;
  top: 50%;
  transform: translateY(-50%);
}

/* 已登录用户信息 */
.user-info-mini {
  display: flex;
  align-items: center;
  gap: 12rpx;
  background: rgba(255, 255, 255, 0.15);
  padding: 8rpx 20rpx 8rpx 8rpx;
  border-radius: 40rpx;
}

.user-avatar-mini {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  border: 2rpx solid rgba(255, 255, 255, 0.5);
}

.user-avatar-placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-emoji {
  font-size: 32rpx;
}

.user-nickname-mini {
  font-size: 28rpx;
  color: white;
  font-weight: 500;
  max-width: 120rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 未登录按钮 */
.login-btn-mini {
  background: rgba(255, 255, 255, 0.2);
  padding: 12rpx 32rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  color: white;
  font-weight: 500;
  border: 2rpx solid rgba(255, 255, 255, 0.5);
}

/* Banner */
.banner {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 40rpx 60rpx;
  color: white;
  /* padding-top 由内联样式动态设置 */
}

.banner-title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.banner-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 快捷操作 */
.quick-actions {
  display: flex;
  gap: 24rpx;
  padding: 32rpx 32rpx 24rpx;
  margin-top: -40rpx;
}

.action-card {
  flex: 1;
  background: white;
  border-radius: 16rpx;
  padding: 32rpx 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  text-align: center;
}

.action-icon {
  font-size: 56rpx;
  margin-bottom: 16rpx;
}

.action-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.action-desc {
  font-size: 24rpx;
  color: #999;
}

/* 通用 Section */
.section {
  margin-top: 32rpx;
  padding: 0 32rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.section-more {
  font-size: 28rpx;
  color: #1890ff;
}

/* 热门目的地 */
.destinations-scroll {
  white-space: nowrap;
  margin: 0 -32rpx;
  padding: 0 32rpx;
}

.destination-card {
  display: inline-block;
  width: 200rpx;
  margin-right: 24rpx;
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  text-align: center;
}

.destination-card:last-child {
  margin-right: 32rpx;
}

.destination-image {
  width: 120rpx;
  height: 120rpx;
  margin: 0 auto 16rpx;
  background: linear-gradient(135deg, #667eea22 0%, #764ba222 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.destination-emoji {
  font-size: 64rpx;
}

.destination-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.destination-tag {
  font-size: 24rpx;
  color: #999;
}

/* 推荐方案 */
.recommended-plans {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.plan-card-mini {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.plan-header-mini {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.plan-name-mini {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.plan-price-mini {
  font-size: 28rpx;
  color: #ff6b35;
  font-weight: 600;
}

.plan-tags-mini {
  margin-bottom: 16rpx;
}

.tag-mini {
  display: inline-block;
  padding: 8rpx 16rpx;
  background: #f0f0f0;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #666;
  margin-right: 12rpx;
}

.plan-stats-mini {
  font-size: 26rpx;
  color: #999;
}

.stat-mini {
  margin-right: 12rpx;
}

.divider-mini {
  margin: 0 8rpx;
  color: #ddd;
}

/* 活动类型 */
.activity-types {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24rpx;
}

.activity-type-card {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  text-align: center;
}

.activity-type-icon {
  font-size: 56rpx;
  margin-bottom: 12rpx;
}

.activity-type-name {
  font-size: 28rpx;
  color: #333;
}
