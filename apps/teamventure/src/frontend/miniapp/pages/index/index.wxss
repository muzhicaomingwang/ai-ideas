/* pages/index/index.wxss */
.index-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 40rpx;
}

.page-header {
  background-color: #fff;
  padding: 48rpx 32rpx 28rpx;
}

.header-title-row {
  display: flex;
  align-items: center;
  gap: 14rpx;
  margin-bottom: 10rpx;
}

.header-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #111;
}

.version-badge {
  padding: 6rpx 12rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  font-weight: 700;
  color: #1890ff;
  background-color: rgba(24, 144, 255, 0.12);
}

.header-subtitle {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

.content {
  padding: 24rpx 32rpx 0;
}

.card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 28rpx;
  border: 2rpx solid #eee;
  margin-bottom: 20rpx;
}

.card-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #222;
  margin-bottom: 16rpx;
}

.card-title-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.clear-link {
  flex-shrink: 0;
  font-size: 24rpx;
  color: #1890ff;
  font-weight: 700;
  padding: 6rpx 10rpx;
  border-radius: 10rpx;
  background: rgba(24, 144, 255, 0.10);
}

.clear-link:active {
  background: rgba(24, 144, 255, 0.18);
}

.clear-link.disabled {
  opacity: 0.45;
  pointer-events: none;
}

.md-version-badge {
  padding: 6rpx 12rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  font-weight: 700;
  color: #52c41a;
  background-color: rgba(82, 196, 26, 0.12);
}

.hint {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 16rpx;
}

.xhs-input-row {
  display: flex;
  gap: 12rpx;
  align-items: flex-start;
}

.xhs-input {
  flex: 1;
  min-height: 120rpx;
  padding: 18rpx 20rpx;
  border-radius: 12rpx;
  border: 2rpx solid #e8e8e8;
  background-color: #fafafa;
  font-size: 28rpx;
  box-sizing: border-box;
}

.xhs-paste {
  flex-shrink: 0;
  padding: 18rpx 18rpx;
  border-radius: 12rpx;
  background-color: #f5f5f5;
  color: #333;
  font-size: 26rpx;
}

.xhs-paste:active {
  background-color: #e8e8e8;
}

.xhs-actions {
  display: flex;
  gap: 16rpx;
  margin-top: 16rpx;
}

.btn-primary,
.btn-secondary {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 14rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
}

.btn-primary::after,
.btn-secondary::after {
  border: none;
}

.btn-primary {
  background-color: #1890ff;
  color: #fff;
}

.btn-primary:active {
  background-color: #0070dd;
}

.btn-secondary {
  background-color: #f5f5f5;
  color: #333;
}

.btn-secondary:active {
  background-color: #e8e8e8;
}

.btn-primary[disabled],
.btn-secondary[disabled] {
  opacity: 0.55;
}

.xhs-parsing {
  padding: 18rpx 0 0;
}

.xhs-parsing-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #222;
  margin-bottom: 12rpx;
}

.xhs-progress {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.xhs-progress-bar {
  flex: 1;
  height: 12rpx;
  background-color: rgba(24, 144, 255, 0.12);
  border-radius: 999rpx;
  overflow: hidden;
}

.xhs-progress-fill {
  height: 100%;
  background-color: #1890ff;
  border-radius: 999rpx;
  transition: width 0.2s ease;
}

.xhs-progress-text {
  width: 70rpx;
  text-align: right;
  font-size: 24rpx;
  color: #1890ff;
  font-weight: 600;
}

.xhs-parsing-sub {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #666;
}

.xhs-error {
  padding-top: 18rpx;
}

.xhs-error-title {
  font-size: 28rpx;
  font-weight: 800;
  color: #222;
  margin-bottom: 10rpx;
}

.xhs-error-msg {
  font-size: 26rpx;
  color: #ff4d4f;
  line-height: 1.6;
  margin-bottom: 8rpx;
}

.xhs-error-hint {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
}

.xhs-action-row {
  margin-top: 14rpx;
  display: flex;
  gap: 12rpx;
}

.xhs-action-btn {
  flex: 1;
  text-align: center;
  padding: 14rpx 0;
  border-radius: 12rpx;
  background-color: #1890ff;
  color: #fff;
  font-size: 26rpx;
  font-weight: 600;
}

.xhs-action-btn:active {
  background-color: #0070dd;
}

.xhs-action-btn.secondary {
  background-color: #f5f5f5;
  color: #333;
}

.xhs-action-btn.secondary:active {
  background-color: #e8e8e8;
}

.xhs-images {
  margin-bottom: 16rpx;
}

.xhs-images-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 10rpx;
}

.xhs-thumb {
  width: 100%;
  height: 210rpx;
  border-radius: 12rpx;
  background-color: #f0f0f0;
}

.xhs-images-hint {
  margin-top: 10rpx;
  font-size: 22rpx;
  color: #888;
}

.xhs-images-empty-hint {
  margin-bottom: 16rpx;
  padding: 10rpx 12rpx;
  font-size: 22rpx;
  color: #888;
  background-color: #fafafa;
  border: 2rpx dashed #e8e8e8;
  border-radius: 12rpx;
}

.parsed-content {
  width: 100%;
  height: 720rpx;
  padding: 18rpx 20rpx;
  border-radius: 12rpx;
  border: 2rpx solid #e8e8e8;
  background-color: #fafafa;
  font-size: 26rpx;
  line-height: 1.7;
  box-sizing: border-box;
}

.btn-wide {
  width: 100%;
  margin-top: 16rpx;
  height: auto;
  line-height: 1.25;
  padding: 22rpx 24rpx;
  white-space: normal;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
}

.markdown-content {
  width: 100%;
  height: 720rpx;
  padding: 18rpx 20rpx;
  border-radius: 12rpx;
  border: 2rpx solid #e8e8e8;
  background-color: #fafafa;
  font-size: 26rpx;
  line-height: 1.7;
  box-sizing: border-box;
}

.helper {
  padding: 10rpx 12rpx 24rpx;
  color: #666;
  font-size: 24rpx;
  line-height: 1.6;
}

.btn-save {
  width: 100%;
  margin-top: 16rpx;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 30rpx;
}

/* 方案名称弹窗 */
.dialog-mask {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.45);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
  padding: 32rpx;
  box-sizing: border-box;
}

.dialog {
  width: 100%;
  max-width: 620rpx;
  background: #fff;
  border-radius: 18rpx;
  padding: 28rpx 26rpx 22rpx;
  box-sizing: border-box;
}

.dialog-title {
  font-size: 32rpx;
  font-weight: 800;
  color: #111;
  margin-bottom: 18rpx;
}

.dialog-input {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 14rpx;
  border: 2rpx solid #e8e8e8;
  background: #fafafa;
  padding: 0 18rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.dialog-actions {
  display: flex;
  gap: 14rpx;
  margin-top: 20rpx;
}

.dialog-btn {
  flex: 1;
  height: 84rpx;
  line-height: 84rpx;
  text-align: center;
  border-radius: 42rpx;
  font-size: 30rpx;
  font-weight: 800;
}

.dialog-btn-cancel {
  background: #f5f5f5;
  color: #333;
}

.dialog-btn-ok {
  background: #1890ff;
  color: #fff;
}

.dialog-wide {
  max-width: 720rpx;
}

/* Logo 选择 */
.logo-hint {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
  margin-top: -8rpx;
  margin-bottom: 14rpx;
}

.logo-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.logo-item {
  width: calc((100% - 24rpx) / 3);
  position: relative;
  border-radius: 14rpx;
  overflow: hidden;
  border: 4rpx solid transparent;
  background: #f5f5f5;
  box-sizing: border-box;
}

.logo-item.selected {
  border-color: rgba(24, 144, 255, 0.8);
}

.logo-thumb {
  width: 100%;
  height: 168rpx;
  display: block;
}

.logo-check {
  position: absolute;
  right: 10rpx;
  top: 10rpx;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  border-radius: 999rpx;
  background: rgba(24, 144, 255, 0.9);
  color: #fff;
  font-size: 26rpx;
  font-weight: 800;
}
