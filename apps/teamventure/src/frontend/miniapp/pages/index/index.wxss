/* pages/index/index.wxss */
.index-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 页面标题 */
.page-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 32rpx 40rpx;
  color: white;
}

.page-title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.page-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 表单容器 */
.form-container {
  padding: 32rpx;
}

/* 模板头部（提示+操作按钮） */
.template-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  gap: 16rpx;
}

.template-hint {
  flex: 1;
  display: flex;
  align-items: center;
  padding: 20rpx 28rpx;
  background: linear-gradient(135deg, #e6f7ff 0%, #f0f9ff 100%);
  border-radius: 12rpx;
  border: 2rpx solid #91d5ff;
}

.hint-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.hint-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
}

/* 操作按钮组 */
.template-actions {
  display: flex;
  gap: 12rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  padding: 20rpx 24rpx;
  background-color: #fff;
  border-radius: 12rpx;
  border: 2rpx solid #d9d9d9;
}

.action-btn:active {
  background-color: #f5f5f5;
}

/* AI填充按钮特殊样式 */
.ai-fill-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-color: #667eea;
}

.ai-fill-btn:active {
  opacity: 0.8;
}

.ai-fill-btn .btn-icon {
  color: #fff;
  font-size: 28rpx;
  margin-right: 8rpx;
}

.ai-fill-btn .btn-text {
  color: #fff;
  font-size: 26rpx;
  white-space: nowrap;
  font-weight: 500;
}

/* 重置按钮 */
.reset-btn .btn-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
  color: #666;
}

.reset-btn .btn-text {
  font-size: 26rpx;
  color: #666;
  white-space: nowrap;
}

/* 表单项 */
.form-item {
  margin-bottom: 24rpx;
}

/* Markdown 输入框 */
.markdown-input {
  width: 100%;
  min-height: 600rpx;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 32rpx;
  border: 2rpx solid #e8e8e8;
  font-size: 28rpx;
  line-height: 1.8;
  box-sizing: border-box;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
}

.markdown-input:focus {
  border-color: #1890ff;
}

.textarea-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

/* 生成提示 */
.generate-tips {
  margin-top: 48rpx;
  padding: 32rpx;
  background: linear-gradient(135deg, #f0f9ff 0%, #e6f7ff 100%);
  border-radius: 16rpx;
  border: 2rpx solid #91d5ff;
}

.tip-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.tip-item:last-child {
  margin-bottom: 0;
}

.tip-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
  line-height: 1;
}

.tip-text {
  font-size: 26rpx;
  color: #1890ff;
  line-height: 1.6;
  flex: 1;
  font-weight: 500;
}

/* 表单操作按钮 */
.form-actions {
  margin-top: 48rpx;
}

.btn-generate {
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #1890ff;
  color: #fff;
}

.btn-icon {
  font-size: 36rpx;
  margin-right: 8rpx;
}

.btn-generate::after {
  border: none;
}

.btn-generate:active {
  background-color: #0070dd;
}

/* AI填充弹窗 */
.ai-fill-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.modal-content {
  width: 600rpx;
  background-color: #fff;
  border-radius: 24rpx;
  overflow: hidden;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.modal-close {
  font-size: 48rpx;
  color: #999;
  line-height: 1;
  padding: 0 8rpx;
}

.modal-body {
  padding: 32rpx;
}

.modal-hint {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 32rpx;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
}

/* 填充表单项 */
.fill-form-item {
  margin-bottom: 32rpx;
}

.fill-form-item:last-child {
  margin-bottom: 0;
}

.fill-label {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.label-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.label-required {
  color: #ff4d4f;
  margin-left: 4rpx;
  font-size: 28rpx;
}

/* 输入框 */
.fill-input {
  width: 100%;
  padding: 24rpx 28rpx;
  background-color: #f9f9f9;
  border-radius: 12rpx;
  border: 2rpx solid #e8e8e8;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}

.fill-input:focus {
  background-color: #fff;
  border-color: #1890ff;
}

/* 弹窗底部按钮 */
.modal-footer {
  display: flex;
  gap: 16rpx;
  padding: 24rpx 32rpx 32rpx;
  border-top: 2rpx solid #f0f0f0;
}

.modal-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
}

.modal-btn::after {
  border: none;
}

.cancel-btn {
  background-color: #f5f5f5;
  color: #666;
}

.cancel-btn:active {
  background-color: #e8e8e8;
}

.confirm-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.confirm-btn:active {
  opacity: 0.8;
}

/* AI生成中卡片 */
.ai-generating-card {
  background: linear-gradient(135deg, #f0f9ff 0%, #e6f7ff 100%);
  border-radius: 16rpx;
  padding: 48rpx 32rpx;
  border: 2rpx solid #91d5ff;
  min-height: 400rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.generating-header {
  width: 100%;
  margin-bottom: 32rpx;
}

.generating-title {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
  gap: 16rpx;
}

.generating-icon {
  font-size: 48rpx;
}

.refresh-icon-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
}

.refresh-icon {
  font-size: 32rpx;
  color: #1890ff;
}

/* 旋转动画 */
.loading-spin {
  animation: spin 1.5s linear infinite;
}

@keyframes spin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

.generating-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #1890ff;
}

/* 进度条 */
.generating-progress {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.progress-bar {
  flex: 1;
  height: 12rpx;
  background-color: rgba(24, 144, 255, 0.1);
  border-radius: 6rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 24rpx;
  color: #1890ff;
  font-weight: 500;
  min-width: 60rpx;
  text-align: right;
}

.generating-tips {
  font-size: 26rpx;
  color: #666;
  text-align: center;
  line-height: 1.6;
}

/* 按钮禁用状态 */
.btn-disabled {
  opacity: 0.4;
  pointer-events: none;
}

.btn-generate[disabled] {
  opacity: 0.4;
  background-color: #d9d9d9;
}
