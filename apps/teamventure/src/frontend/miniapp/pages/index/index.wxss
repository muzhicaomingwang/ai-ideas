/* pages/index/index.wxss */
.index-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 160rpx;
}

.page-header {
  background-color: #fff;
  padding: 48rpx 32rpx 28rpx;
}

.header-title-row {
  display: flex;
  align-items: center;
  gap: 14rpx;
  margin-bottom: 10rpx;
}

.header-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #111;
}

.version-badge {
  padding: 6rpx 12rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  font-weight: 700;
  color: #1890ff;
  background-color: rgba(24, 144, 255, 0.12);
}

.header-subtitle {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

.content {
  padding: 24rpx 32rpx 0;
}

.card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 28rpx;
  border: 2rpx solid #eee;
  margin-bottom: 20rpx;
}

.card-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #222;
  margin-bottom: 16rpx;
}

.hint {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 16rpx;
}

.xhs-input-row {
  display: flex;
  gap: 12rpx;
  align-items: flex-start;
}

.xhs-input {
  flex: 1;
  min-height: 120rpx;
  padding: 18rpx 20rpx;
  border-radius: 12rpx;
  border: 2rpx solid #e8e8e8;
  background-color: #fafafa;
  font-size: 28rpx;
  box-sizing: border-box;
}

.xhs-paste {
  flex-shrink: 0;
  padding: 18rpx 18rpx;
  border-radius: 12rpx;
  background-color: #f5f5f5;
  color: #333;
  font-size: 26rpx;
}

.xhs-paste:active {
  background-color: #e8e8e8;
}

.xhs-actions {
  display: flex;
  gap: 16rpx;
  margin-top: 16rpx;
}

.btn-primary,
.btn-secondary {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 14rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
}

.btn-primary::after,
.btn-secondary::after {
  border: none;
}

.btn-primary {
  background-color: #1890ff;
  color: #fff;
}

.btn-primary:active {
  background-color: #0070dd;
}

.btn-secondary {
  background-color: #f5f5f5;
  color: #333;
}

.btn-secondary:active {
  background-color: #e8e8e8;
}

.btn-primary[disabled],
.btn-secondary[disabled] {
  opacity: 0.55;
}

.xhs-parsing {
  padding: 18rpx 0 0;
}

.xhs-parsing-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #222;
  margin-bottom: 12rpx;
}

.xhs-progress {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.xhs-progress-bar {
  flex: 1;
  height: 12rpx;
  background-color: rgba(24, 144, 255, 0.12);
  border-radius: 999rpx;
  overflow: hidden;
}

.xhs-progress-fill {
  height: 100%;
  background-color: #1890ff;
  border-radius: 999rpx;
  transition: width 0.2s ease;
}

.xhs-progress-text {
  width: 70rpx;
  text-align: right;
  font-size: 24rpx;
  color: #1890ff;
  font-weight: 600;
}

.xhs-parsing-sub {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #666;
}

.xhs-error {
  padding-top: 18rpx;
}

.xhs-error-title {
  font-size: 28rpx;
  font-weight: 800;
  color: #222;
  margin-bottom: 10rpx;
}

.xhs-error-msg {
  font-size: 26rpx;
  color: #ff4d4f;
  line-height: 1.6;
  margin-bottom: 8rpx;
}

.xhs-error-hint {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
}

.xhs-action-row {
  margin-top: 14rpx;
  display: flex;
  gap: 12rpx;
}

.xhs-action-btn {
  flex: 1;
  text-align: center;
  padding: 14rpx 0;
  border-radius: 12rpx;
  background-color: #1890ff;
  color: #fff;
  font-size: 26rpx;
  font-weight: 600;
}

.xhs-action-btn:active {
  background-color: #0070dd;
}

.xhs-action-btn.secondary {
  background-color: #f5f5f5;
  color: #333;
}

.xhs-action-btn.secondary:active {
  background-color: #e8e8e8;
}

.markdown-preview {
  width: 100%;
  box-sizing: border-box;
  min-height: 220rpx;
  padding: 18rpx 20rpx;
  border-radius: 12rpx;
  border: 2rpx solid #e8e8e8;
  background-color: #fafafa;
  font-size: 28rpx;
  line-height: 1.8;
  color: #333;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei',
    sans-serif;
}

.helper {
  padding: 10rpx 12rpx 24rpx;
  color: #666;
  font-size: 24rpx;
  line-height: 1.6;
}

.bottom-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 18rpx 32rpx 32rpx;
  background: rgba(245, 245, 245, 0.96);
  backdrop-filter: blur(10px);
}

.bottom-bar .btn-primary {
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
}
