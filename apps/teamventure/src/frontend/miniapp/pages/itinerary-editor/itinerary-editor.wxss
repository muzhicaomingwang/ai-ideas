/**
 * 行程编辑器页面样式
 * 表单化可视化编辑器
 */

/* ==================== 全局容器 ==================== */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f7fa;
}

/* ==================== 顶部操作栏 ==================== */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 24rpx;
  background: linear-gradient(135deg, #1890ff 0%, #096dd9 100%);
  box-shadow: 0 4rpx 12rpx rgba(24, 144, 255, 0.3);
}

.header-left {
  flex: 1;
}

.back-btn {
  display: flex;
  align-items: center;
  padding: 12rpx 16rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 24rpx;
  width: fit-content;
}

.back-btn text {
  color: #fff;
  font-size: 28rpx;
}

.icon-back {
  font-size: 36rpx;
  margin-right: 4rpx;
  font-weight: bold;
}

.header-title {
  flex: 2;
  text-align: center;
  color: #fff;
  font-size: 34rpx;
  font-weight: 600;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.header-right {
  flex: 1;
  display: flex;
  justify-content: flex-end;
}

.undo-redo {
  display: flex;
  gap: 16rpx;
}

.icon-btn {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  transition: all 0.2s;
}

.icon-btn:active {
  background: rgba(255, 255, 255, 0.4);
  transform: scale(0.95);
}

.icon-btn.disabled {
  opacity: 0.4;
  pointer-events: none;
}

.icon-btn .icon {
  color: #fff;
  font-size: 32rpx;
}

/* ==================== 验证错误提示 ==================== */
.validation-errors {
  background: #fff2f0;
  border-left: 6rpx solid #ff4d4f;
  padding: 16rpx 24rpx;
  margin: 16rpx 24rpx;
  border-radius: 8rpx;
}

.error-item {
  display: flex;
  align-items: flex-start;
  padding: 8rpx 0;
}

.error-icon {
  color: #ff4d4f;
  font-size: 28rpx;
  margin-right: 12rpx;
  flex-shrink: 0;
}

.error-text {
  color: #cf1322;
  font-size: 26rpx;
  line-height: 1.5;
}

/* ==================== 内容区域 ==================== */
.content {
  flex: 1;
  padding: 16rpx 24rpx;
  padding-bottom: 180rpx;
}

/* ==================== 空状态 ==================== */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 48rpx;
  background: #fff;
  border-radius: 16rpx;
  margin-top: 40rpx;
}

.empty-icon {
  font-size: 96rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #303133;
  margin-bottom: 12rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: #909399;
}

/* ==================== 天数列表 ==================== */
.days-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

/* ==================== 天数卡片 ==================== */
.day-card {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.day-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  background: linear-gradient(135deg, #e6f7ff 0%, #bae7ff 100%);
  border-bottom: 2rpx solid #91d5ff;
}

.day-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.day-number {
  font-size: 32rpx;
  font-weight: 600;
  color: #1890ff;
}

.day-date {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  background: #fff;
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #606266;
}

.day-date:active {
  background: #f5f5f5;
}

.icon-calendar {
  font-size: 28rpx;
}

.day-actions {
  display: flex;
  gap: 12rpx;
}

.action-btn {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
  border-radius: 12rpx;
  transition: all 0.2s;
}

.action-btn:active {
  transform: scale(0.95);
}

.action-btn .icon {
  font-size: 28rpx;
  color: #606266;
}

.action-btn.danger .icon {
  color: #ff4d4f;
}

.action-btn.danger:active {
  background: #fff2f0;
}

/* ==================== 活动列表 ==================== */
.activities-list {
  padding: 16rpx;
}

.empty-activities {
  padding: 40rpx;
  text-align: center;
}

.empty-activities .hint {
  font-size: 26rpx;
  color: #909399;
}

/* ==================== 活动项 ==================== */
.activity-item {
  display: flex;
  align-items: stretch;
  background: #fafafa;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  overflow: hidden;
  border: 2rpx solid #e8e8e8;
  transition: all 0.3s;
}

.activity-item:active {
  background: #f0f0f0;
}

.activity-item.dragging {
  opacity: 0.6;
  transform: scale(1.02);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.activity-content {
  flex: 1;
  display: flex;
  padding: 20rpx;
  gap: 20rpx;
}

.activity-time {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-width: 100rpx;
  padding-right: 20rpx;
  border-right: 2rpx solid #e8e8e8;
}

.time-text {
  font-size: 26rpx;
  color: #1890ff;
  font-weight: 500;
}

.time-separator {
  font-size: 22rpx;
  color: #c0c4cc;
  margin: 4rpx 0;
}

.activity-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.activity-name {
  font-size: 30rpx;
  color: #303133;
  font-weight: 500;
  line-height: 1.4;
}

.activity-location {
  display: flex;
  align-items: center;
  gap: 6rpx;
  font-size: 24rpx;
  color: #909399;
}

.icon-location {
  font-size: 24rpx;
}

.activity-note {
  margin-top: 4rpx;
}

.note-text {
  font-size: 24rpx;
  color: #606266;
  background: #fff;
  padding: 8rpx 12rpx;
  border-radius: 8rpx;
  display: inline-block;
}

/* ==================== 活动操作按钮 ==================== */
.activity-actions {
  display: flex;
  flex-direction: column;
  justify-content: center;
  gap: 8rpx;
  padding: 12rpx;
  background: #f5f5f5;
  border-left: 2rpx solid #e8e8e8;
}

.action-btn.small {
  width: 48rpx;
  height: 48rpx;
  background: #fff;
  border-radius: 8rpx;
}

.action-btn.small .icon {
  font-size: 24rpx;
}

/* ==================== 添加活动按钮 ==================== */
.add-activity-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 24rpx;
  background: #f0f9ff;
  border: 2rpx dashed #69c0ff;
  border-radius: 12rpx;
  color: #1890ff;
  font-size: 28rpx;
  transition: all 0.2s;
}

.add-activity-btn:active {
  background: #e6f7ff;
  border-color: #40a9ff;
}

.add-activity-btn .icon {
  font-size: 32rpx;
  font-weight: bold;
}

/* ==================== 添加天数区域 ==================== */
.add-day-section {
  padding: 24rpx 0;
}

.add-day-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 32rpx;
  background: #fff;
  border: 2rpx dashed #d9d9d9;
  border-radius: 16rpx;
  color: #606266;
  font-size: 30rpx;
  transition: all 0.2s;
}

.add-day-btn:active {
  background: #fafafa;
  border-color: #1890ff;
  color: #1890ff;
}

.add-day-btn .icon {
  font-size: 36rpx;
  font-weight: bold;
}

/* ==================== 底部占位 ==================== */
.bottom-placeholder {
  height: 40rpx;
}

/* ==================== 底部操作栏 ==================== */
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 24rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background: #fff;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.08);
  z-index: 100;
}

.footer-left {
  flex: 1;
}

.status-indicator {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.status-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
}

.status-indicator.saved .status-dot {
  background: #52c41a;
}

.status-indicator.unsaved .status-dot {
  background: #faad14;
  animation: pulse 1.5s infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}

.status-text {
  font-size: 24rpx;
  color: #909399;
}

.footer-right {
  display: flex;
  gap: 16rpx;
}

.btn {
  padding: 16rpx 32rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  transition: all 0.2s;
}

.btn::after {
  border: none;
}

.btn-secondary {
  background: #f5f5f5;
  color: #606266;
}

.btn-secondary:active {
  background: #e8e8e8;
}

.btn-primary {
  background: linear-gradient(135deg, #1890ff 0%, #096dd9 100%);
  color: #fff;
}

.btn-primary:active {
  opacity: 0.85;
}

.btn-primary[disabled] {
  background: #bfbfbf;
  color: #fff;
  opacity: 0.6;
}

.btn-primary.loading {
  opacity: 0.7;
  pointer-events: none;
}

/* ==================== 活动编辑弹窗 ==================== */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 200;
  animation: fadeIn 0.2s ease;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.activity-editor-modal {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  border-radius: 32rpx 32rpx 0 0;
  z-index: 201;
  transform: translateY(100%);
  transition: transform 0.3s ease;
  max-height: 85vh;
  display: flex;
  flex-direction: column;
}

.activity-editor-modal.show {
  transform: translateY(0);
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 32rpx 24rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.modal-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #303133;
}

.modal-close {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #909399;
  background: #f5f5f5;
  border-radius: 50%;
}

.modal-close:active {
  background: #e8e8e8;
}

.modal-content {
  flex: 1;
  overflow-y: auto;
  padding: 24rpx 32rpx;
}

.form-group {
  margin-bottom: 32rpx;
}

.form-label {
  font-size: 28rpx;
  color: #606266;
  margin-bottom: 12rpx;
  display: block;
}

.form-label.required::before {
  content: '*';
  color: #ff4d4f;
  margin-right: 6rpx;
}

.form-input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  background: #f5f7fa;
  border: 2rpx solid #e8e8e8;
  border-radius: 12rpx;
  font-size: 30rpx;
  color: #303133;
  box-sizing: border-box;
  transition: all 0.2s;
}

.form-input:focus {
  border-color: #1890ff;
  background: #fff;
}

.form-input::placeholder {
  color: #c0c4cc;
}

.form-textarea {
  width: 100%;
  min-height: 160rpx;
  padding: 20rpx 24rpx;
  background: #f5f7fa;
  border: 2rpx solid #e8e8e8;
  border-radius: 12rpx;
  font-size: 30rpx;
  color: #303133;
  box-sizing: border-box;
  line-height: 1.6;
}

.form-textarea:focus {
  border-color: #1890ff;
  background: #fff;
}

.form-textarea::placeholder {
  color: #c0c4cc;
}

/* ==================== 时间范围选择器 ==================== */
.time-range-picker {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.time-picker-btn {
  flex: 1;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f7fa;
  border: 2rpx solid #e8e8e8;
  border-radius: 12rpx;
  font-size: 30rpx;
  color: #303133;
  transition: all 0.2s;
}

.time-picker-btn:active {
  border-color: #1890ff;
  background: #e6f7ff;
}

.time-range-picker .time-separator {
  font-size: 28rpx;
  color: #909399;
}

.modal-footer {
  display: flex;
  gap: 24rpx;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  border-top: 2rpx solid #f0f0f0;
}

.modal-footer .btn {
  flex: 1;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
