/* pages/itinerary-change/itinerary-change.wxss */
.change-page {
  height: 100vh;
  background-color: #f5f5f5;
  padding: 24rpx 32rpx 0;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.content {
  flex: 1;
  min-height: 0;
}

.card {
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
}

.meta {
  padding: 24rpx 24rpx 20rpx;
}

.meta-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.meta-label {
  color: #666;
  font-size: 26rpx;
}

.meta-value {
  color: #333;
  font-size: 28rpx;
  font-weight: 600;
}

.meta-hint {
  color: #999;
  font-size: 24rpx;
  line-height: 1.5;
}

.editor {
  padding: 16rpx;
}

.markdown-editor {
  width: 100%;
  height: 100%;
  min-height: 900rpx;
  font-size: 26rpx;
  line-height: 1.6;
  color: #333;
}

.bottom-actions {
  box-sizing: border-box;
  padding: 24rpx 0 calc(40rpx + env(safe-area-inset-bottom));
  background: #f5f5f5;
  border-top: 1rpx solid #e8e8e8;
  display: flex;
  gap: 16rpx;
}

.btn {
  flex: 1;
  border-radius: 12rpx;
  font-size: 26rpx;
  padding: 18rpx 0;
}

.btn-ghost {
  background: #fff;
  color: #333;
  border: 1rpx solid #d9d9d9;
}

.btn-secondary {
  background: #e6f7ff;
  color: #1890ff;
  border: 1rpx solid #91d5ff;
}

.btn-primary {
  background: #1890ff;
  color: #fff;
}
