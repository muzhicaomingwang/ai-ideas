/* pages/detail/detail.wxss */
.detail-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 24rpx 32rpx 160rpx;
}

/* 方案概览 */
.plan-overview {
  margin-bottom: 24rpx;
}

.overview-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.plan-title {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.plan-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.4;
}

.recommended-badge {
  display: inline-block;
  padding: 4rpx 12rpx;
  background: linear-gradient(135deg, #faad14 0%, #ff7a00 100%);
  color: #fff;
  border-radius: 4rpx;
  font-size: 20rpx;
  font-weight: 500;
  white-space: nowrap;
}

.status-badge {
  padding: 8rpx 16rpx;
  border-radius: 4rpx;
  font-size: 24rpx;
  white-space: nowrap;
}

.status-draft {
  background-color: #f0f0f0;
  color: #666;
}

.status-confirmed {
  background-color: #f6ffed;
  color: #52c41a;
}

.status-cancelled {
  background-color: #fff1f0;
  color: #f5222d;
}

/* 概览统计 */
.overview-stats {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-top: 1rpx solid #e8e8e8;
  border-bottom: 1rpx solid #e8e8e8;
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

.stat-divider {
  width: 1rpx;
  height: 48rpx;
  background-color: #e8e8e8;
}

/* 亮点 */
.highlights {
  margin-top: 24rpx;
  padding: 24rpx;
  background-color: #f0f8ff;
  border-radius: 12rpx;
  border-left: 4rpx solid #1890ff;
}

.highlights-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 12rpx;
}

.highlights-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* 折叠面板 */
.section-panel {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
}

.panel-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  background-color: #fafafa;
}

.panel-title-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.panel-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.panel-version {
  font-size: 24rpx;
  color: #999;
}

.itinerary-change-pill {
  height: 48rpx;
  line-height: 48rpx;
  padding: 0 16rpx;
  font-size: 24rpx;
  border-radius: 999rpx;
  background: #f6ffed;
  color: #52c41a;
  border: 2rpx solid #b7eb8f;
  box-sizing: border-box;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}

.itinerary-save-pill {
  height: 48rpx;
  line-height: 48rpx;
  padding: 0 16rpx;
  font-size: 24rpx;
  border-radius: 999rpx;
  background: rgba(24, 144, 255, 0.12);
  color: #1890ff;
  border: 2rpx solid rgba(24, 144, 255, 0.30);
  box-sizing: border-box;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}

.itinerary-save-pill.disabled {
  opacity: 0.5;
  pointer-events: none;
}

.toggle-icon {
  font-size: 24rpx;
  color: #999;
  transition: transform 0.3s ease;
}

.panel-content {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s ease;
}

.panel-content.expanded {
  max-height: 5000rpx;
}

/* 行程（Day 纵列 + 横向卡片） */
.itinerary-day-list {
  padding: 28rpx 32rpx 32rpx;
}

.itinerary-day {
  margin-bottom: 40rpx;
}

.itinerary-day:last-child {
  margin-bottom: 0;
}

.day-header {
  display: flex;
  align-items: baseline;
  margin-bottom: 18rpx;
  padding-bottom: 14rpx;
  border-bottom: 2rpx solid #e8e8e8;
}

.day-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #222;
  margin-right: 12rpx;
}

.day-date {
  font-size: 24rpx;
  color: #999;
}

.cards-scroll {
  width: 100%;
}

.cards-row {
  display: flex;
  align-items: stretch;
  gap: 16rpx;
  padding: 10rpx 0 6rpx;
}

.it-card {
  width: 142rpx;
  flex-shrink: 0;
  border-radius: 16rpx;
  padding: 18rpx 18rpx 16rpx;
  border: 2rpx solid #e8e8e8;
  background: #fff;
  box-shadow: 0 6rpx 18rpx rgba(0, 0, 0, 0.06);
  min-height: 214rpx;
  display: flex;
  flex-direction: column;
}

.it-card-transport {
  border-color: rgba(24, 144, 255, 0.35);
  background: rgba(24, 144, 255, 0.06);
}

.it-card-nearby {
  border-color: rgba(82, 196, 26, 0.35);
  background: rgba(82, 196, 26, 0.06);
}

.it-card-accommodation {
  border-color: rgba(114, 46, 209, 0.35);
  background: rgba(114, 46, 209, 0.06);
}

.it-card-badges {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-bottom: 12rpx;
}

.it-badge {
  padding: 4rpx 10rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  font-weight: 700;
  line-height: 1.2;
}

.it-badge-type {
  background: rgba(0, 0, 0, 0.06);
  color: #333;
}

.it-card-time {
  font-size: 22rpx;
  color: #1890ff;
  font-weight: 700;
  margin-bottom: 8rpx;
}

.it-card-title {
  font-size: 30rpx;
  font-weight: 800;
  color: #111;
  line-height: 1.35;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

.it-card-sub {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
  overflow: hidden;
}


/* 底部操作栏 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 32rpx;
  background-color: #fff;
  border-top: 1rpx solid #e8e8e8;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.05);
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
}

.reviewing-actions {
  display: flex;
  gap: 16rpx;
}

.btn-action {
  flex: 1;
  width: auto;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  text-align: center;
}

.btn-confirm,
.btn-confirmed {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  text-align: center;
}

.btn-confirm {
  background-color: #1890ff;
  color: #fff;
}

.btn-confirm::after {
  border: none;
}

.btn-confirm:active {
  background-color: #0070dd;
}

.reviewing-actions .btn-confirm {
  width: auto;
}

.btn-cancel {
  background-color: #fff1f0;
  color: #f5222d;
  border: 2rpx solid #ffa39e;
}

.btn-archive {
  background-color: #fafafa;
  color: #666;
  border: 2rpx solid #d9d9d9;
}

.btn-action::after {
  border: none;
}

.btn-action:active {
  opacity: 0.9;
}

/* 通晒日期确认弹窗 */
.dialog-mask {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.45);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
  padding: 32rpx;
  box-sizing: border-box;
}

.dialog {
  width: 100%;
  max-width: 620rpx;
  background: #fff;
  border-radius: 18rpx;
  padding: 28rpx 26rpx 22rpx;
  box-sizing: border-box;
}

.dialog-wide {
  max-width: 680rpx;
}

.dialog-title {
  font-size: 32rpx;
  font-weight: 800;
  color: #111;
  margin-bottom: 10rpx;
}

.dialog-sub {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 16rpx;
}

.dialog-picker {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 14rpx;
  border: 2rpx solid #e8e8e8;
  background: #fafafa;
  padding: 0 18rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #111;
}

.dialog-actions {
  display: flex;
  gap: 14rpx;
  margin-top: 20rpx;
}

.dialog-btn {
  flex: 1;
  height: 84rpx;
  line-height: 84rpx;
  text-align: center;
  border-radius: 42rpx;
  font-size: 30rpx;
  font-weight: 800;
}

.dialog-btn-cancel {
  background: #f5f5f5;
  color: #333;
}

.dialog-btn-ok {
  background: #1890ff;
  color: #fff;
}

/* 卡片编辑器 */
.type-tabs {
  display: flex;
  gap: 12rpx;
  margin: 12rpx 0 18rpx;
}

.type-tab {
  flex: 1;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  border-radius: 14rpx;
  font-size: 26rpx;
  font-weight: 800;
  background: #f5f5f5;
  color: #333;
  border: 2rpx solid #e8e8e8;
  box-sizing: border-box;
}

.type-tab.active {
  background: rgba(24, 144, 255, 0.12);
  color: #1890ff;
  border-color: rgba(24, 144, 255, 0.35);
}

.dialog-field {
  margin-top: 14rpx;
}

.field-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
  font-weight: 700;
}

.field-input {
  width: 100%;
  height: 84rpx;
  line-height: 84rpx;
  border-radius: 14rpx;
  border: 2rpx solid #e8e8e8;
  background: #fafafa;
  padding: 0 18rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #111;
}

.time-row {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.time-input {
  flex: 1;
  height: 84rpx;
  line-height: 84rpx;
  border-radius: 14rpx;
  border: 2rpx solid #e8e8e8;
  background: #fafafa;
  padding: 0 18rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #111;
}

.time-sep {
  width: 36rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
  font-weight: 800;
}

.field-hint {
  margin-top: 10rpx;
  font-size: 22rpx;
  color: #999;
}

.btn-confirmed {
  background-color: #f6ffed;
  color: #52c41a;
  border: 2rpx solid #52c41a;
}

.btn-confirmed::after {
  border: none;
}
