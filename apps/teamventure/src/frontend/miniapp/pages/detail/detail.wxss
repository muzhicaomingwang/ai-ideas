/* pages/detail/detail.wxss */
.detail-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 24rpx 32rpx 160rpx;
}

/* 方案概览 */
.plan-overview {
  margin-bottom: 24rpx;
}

.overview-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.plan-title {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.plan-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.4;
}

.recommended-badge {
  display: inline-block;
  padding: 4rpx 12rpx;
  background: linear-gradient(135deg, #faad14 0%, #ff7a00 100%);
  color: #fff;
  border-radius: 4rpx;
  font-size: 20rpx;
  font-weight: 500;
  white-space: nowrap;
}

.status-badge {
  padding: 8rpx 16rpx;
  border-radius: 4rpx;
  font-size: 24rpx;
  white-space: nowrap;
}

.status-draft {
  background-color: #f0f0f0;
  color: #666;
}

.status-confirmed {
  background-color: #f6ffed;
  color: #52c41a;
}

.status-cancelled {
  background-color: #fff1f0;
  color: #f5222d;
}

/* 概览统计 */
.overview-stats {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-top: 1rpx solid #e8e8e8;
  border-bottom: 1rpx solid #e8e8e8;
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

.stat-divider {
  width: 1rpx;
  height: 48rpx;
  background-color: #e8e8e8;
}

/* 亮点 */
.highlights {
  margin-top: 24rpx;
  padding: 24rpx;
  background-color: #f0f8ff;
  border-radius: 12rpx;
  border-left: 4rpx solid #1890ff;
}

.highlights-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 12rpx;
}

.highlights-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* 折叠面板 */
.section-panel {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
}

.panel-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  background-color: #fafafa;
}

.panel-title-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.panel-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.panel-version {
  font-size: 24rpx;
  color: #999;
}

.itinerary-change-pill {
  height: 48rpx;
  line-height: 48rpx;
  padding: 0 16rpx;
  font-size: 24rpx;
  border-radius: 999rpx;
  background: #f6ffed;
  color: #52c41a;
  border: 2rpx solid #b7eb8f;
  box-sizing: border-box;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}

.toggle-icon {
  font-size: 24rpx;
  color: #999;
  transition: transform 0.3s ease;
}

.panel-content {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s ease;
}

.panel-content.expanded {
  max-height: 5000rpx;
}

/* 地图路线 */
.map-panel {
  padding: 24rpx;
  background: linear-gradient(145deg, #f0f8ff 0%, #e6f7ff 100%);
  border-radius: 16rpx;
  border: 3rpx solid #91d5ff;
  box-shadow: 0 4rpx 16rpx rgba(24, 144, 255, 0.12);
}

.day-tabs {
  white-space: nowrap;
  margin-bottom: 16rpx;
}

.day-tabs-inner {
  display: inline-flex;
  gap: 12rpx;
}

.day-tab {
  padding: 10rpx 20rpx;
  border-radius: 999rpx;
  font-size: 24rpx;
  background: #f5f5f5;
  color: #666;
  border: 2rpx solid #eee;
}

.day-tab.active {
  background: #e6f7ff;
  color: #1890ff;
  border-color: #91d5ff;
}

/* 地图类型tabs（跨城/本地） */
.map-type-tabs {
  white-space: nowrap;
  margin-bottom: 16rpx;
}

.map-type-tabs-inner {
  display: inline-flex;
  gap: 12rpx;
}

.map-type-tab {
  padding: 8rpx 24rpx;
  border-radius: 999rpx;
  font-size: 24rpx;
  background: #ffffff;
  color: #666;
  border: 2rpx solid #d9d9d9;
}

.map-type-tab.active {
  background: linear-gradient(135deg, #1890ff 0%, #096dd9 100%);
  color: #ffffff;
  border-color: #1890ff;
  font-weight: 500;
}

.route-map {
  width: 100%;
  height: 520rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.route-map-static {
  width: 100%;
  height: 520rpx;
  border-radius: 12rpx;
  overflow: hidden;
  display: block;
}

.map-loading,
.map-empty {
  padding: 32rpx 0;
  text-align: center;
  color: #999;
  font-size: 26rpx;
}

/* 行程时间轴 */
.itinerary-timeline {
  padding: 32rpx;
}

.timeline-day {
  margin-bottom: 48rpx;
}

.timeline-day:last-child {
  margin-bottom: 0;
}

.day-header {
  display: flex;
  align-items: baseline;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #e8e8e8;
}

.day-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-right: 12rpx;
}

.day-date {
  font-size: 24rpx;
  color: #999;
}

.timeline-items {
  padding-left: 32rpx;
}

.timeline-item {
  position: relative;
  padding-left: 48rpx;
  padding-bottom: 32rpx;
}

.timeline-item:last-child {
  padding-bottom: 0;
}

.time-dot {
  position: absolute;
  left: 0;
  top: 8rpx;
  width: 16rpx;
  height: 16rpx;
  background-color: #1890ff;
  border-radius: 50%;
  border: 4rpx solid #e6f7ff;
}

.time-line {
  position: absolute;
  left: 7rpx;
  top: 24rpx;
  bottom: 0;
  width: 2rpx;
  background-color: #e8e8e8;
}

.time-content {
  padding-left: 16rpx;
}

.time-range {
  font-size: 24rpx;
  color: #1890ff;
  margin-bottom: 8rpx;
}

.activity-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.activity-location {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.activity-note {
  font-size: 24rpx;
  color: #999;
  font-style: italic;
}

/* 底部操作栏 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 32rpx;
  background-color: #fff;
  border-top: 1rpx solid #e8e8e8;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.05);
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
}

.reviewing-actions {
  display: flex;
  gap: 16rpx;
}

.btn-action {
  flex: 1;
  width: auto;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  text-align: center;
}

.btn-confirm,
.btn-confirmed {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  text-align: center;
}

.btn-confirm {
  background-color: #1890ff;
  color: #fff;
}

.btn-confirm::after {
  border: none;
}

.btn-confirm:active {
  background-color: #0070dd;
}

.reviewing-actions .btn-confirm {
  width: auto;
}

.btn-cancel {
  background-color: #fff1f0;
  color: #f5222d;
  border: 2rpx solid #ffa39e;
}

.btn-archive {
  background-color: #fafafa;
  color: #666;
  border: 2rpx solid #d9d9d9;
}

.btn-action::after {
  border: none;
}

.btn-action:active {
  opacity: 0.9;
}

.btn-confirmed {
  background-color: #f6ffed;
  color: #52c41a;
  border: 2rpx solid #52c41a;
}

.btn-confirmed::after {
  border: none;
}
