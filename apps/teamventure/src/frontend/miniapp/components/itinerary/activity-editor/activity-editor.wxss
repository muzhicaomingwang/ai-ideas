/**
 * activity-editor 组件样式
 */

/* 蒙层 */
.editor-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
  justify-content: center;
}

/* 编辑器容器 */
.editor-container {
  width: 100%;
  max-height: 85vh;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  display: flex;
  flex-direction: column;
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

/* 标题栏 */
.editor-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.editor-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
}

.close-btn {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f5f5;
  border-radius: 50%;
}

.close-btn .icon {
  font-size: 28rpx;
  color: #999;
}

.close-btn:active {
  background: #e8e8e8;
}

/* 表单内容区 */
.editor-body {
  flex: 1;
  padding: 24rpx 32rpx;
  max-height: 60vh;
}

/* 表单项 */
.form-item {
  margin-bottom: 32rpx;
}

.form-label {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.label-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.required {
  color: #ff4d4f;
  margin-left: 4rpx;
}

/* 输入框 */
.form-input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  background: #f8f9fa;
  border: 2rpx solid #e8e8e8;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  transition: border-color 0.2s;
}

.form-input:focus {
  border-color: #1890ff;
  background: #fff;
}

.form-input.error {
  border-color: #ff4d4f;
  background: #fff5f5;
}

.form-input::placeholder {
  color: #bbb;
}

/* 文本域 */
.form-textarea {
  width: 100%;
  min-height: 160rpx;
  padding: 20rpx 24rpx;
  background: #f8f9fa;
  border: 2rpx solid #e8e8e8;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  line-height: 1.6;
}

.form-textarea:focus {
  border-color: #1890ff;
  background: #fff;
}

.char-count {
  display: block;
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

/* 错误提示 */
.error-hint {
  display: block;
  font-size: 24rpx;
  color: #ff4d4f;
  margin-top: 8rpx;
}

/* 时间选择器行 */
.time-picker-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.time-picker-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  padding: 0 24rpx;
  background: #f8f9fa;
  border: 2rpx solid #e8e8e8;
  border-radius: 12rpx;
  transition: all 0.2s;
}

.time-picker-btn:active {
  border-color: #1890ff;
  background: #e6f7ff;
}

.time-value {
  font-size: 30rpx;
  color: #1890ff;
  font-weight: 500;
}

.icon-arrow {
  font-size: 20rpx;
  color: #999;
}

.time-separator {
  font-size: 28rpx;
  color: #999;
  padding: 0 8rpx;
}

/* 底部按钮 */
.editor-footer {
  display: flex;
  gap: 24rpx;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  border-top: 1rpx solid #f0f0f0;
  background: #fff;
}

.btn {
  flex: 1;
  height: 88rpx;
  border-radius: 12rpx;
  font-size: 30rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  transition: all 0.2s;
}

.btn::after {
  border: none;
}

.btn-cancel {
  background: #f5f5f5;
  color: #666;
}

.btn-cancel:active {
  background: #e8e8e8;
}

.btn-save {
  background: linear-gradient(135deg, #1890ff 0%, #36cfc9 100%);
  color: #fff;
}

.btn-save:active {
  opacity: 0.9;
  transform: scale(0.98);
}
