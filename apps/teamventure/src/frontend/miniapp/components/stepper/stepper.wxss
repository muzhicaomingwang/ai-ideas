/* components/stepper/stepper.wxss */
.stepper {
  display: flex;
  align-items: center;
}

.stepper-btn {
  width: 56rpx;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  border-radius: 8rpx;
  background-color: #f5f5f5;
  color: #333;
  font-size: 32rpx;
  font-weight: 500;
  user-select: none;
}

.stepper-btn:active:not(.disabled) {
  background-color: #e8e8e8;
}

.stepper-btn.disabled {
  background-color: #f5f5f5;
  color: #d9d9d9;
}

.stepper-input {
  flex: 1;
  min-width: 120rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin: 0 16rpx;
}
