# TeamVenture 生产环境配置
# 环境标识
ENVIRONMENT=prod

# ==================== Java 业务服务配置 ====================
# Spring Boot Profile
SPRING_PROFILES_ACTIVE=dev

# MySQL 主库配置
MYSQL_MASTER_HOST=localhost
MYSQL_MASTER_PORT=3306
MYSQL_MASTER_DATABASE=teamventure_main
MYSQL_MASTER_USERNAME=root
MYSQL_MASTER_PASSWORD=root123456
SPRING_DATASOURCE_DRUID_MASTER_URL=jdbc:mysql://localhost:3306/teamventure_main?useSSL=false&serverTimezone=Asia/Shanghai&characterEncoding=utf8mb4&allowPublicKeyRetrieval=true

# MySQL 从库配置
MYSQL_SLAVE_HOST=localhost
MYSQL_SLAVE_PORT=3307

# Java 服务端口
JAVA_SERVICE_PORT=8080

# ==================== Python AI 服务配置 ====================
APP_NAME=teamventure-ai-service
DEBUG=true
HOST=0.0.0.0
PYTHON_SERVICE_PORT=8000

# OpenAI 配置
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-0125-preview
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=4000

# ==================== Redis 配置 ====================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis123456
REDIS_DB=0
SPRING_DATA_REDIS_HOST=localhost

# ==================== RabbitMQ 配置 ====================
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=admin123456
RABBITMQ_VHOST=/
SPRING_RABBITMQ_HOST=localhost

# MQ Exchange/Queue 配置
MQ_EXCHANGE=plan.generation.topic
MQ_QUEUE=ai.gen.req.queue
MQ_ROUTING_KEY=plan.request.#

# ==================== 服务间调用配置 ====================
# Python 服务调用 Java 回调地址
JAVA_CALLBACK_URL=http://localhost:8080/internal/plans/batch
JAVA_INTERNAL_SECRET=change-this-in-production

# Java 服务调用 Python AI 服务地址
TEAMVENTURE_AI_SERVICE_URL=http://localhost:8000
TEAMVENTURE_AI_SERVICE_CALLBACK_SECRET=change-this-in-production

# ==================== Nginx 配置 ====================
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# ==================== 日志配置 ====================
LOG_LEVEL=INFO

# ==================== MySQL 数据库初始化配置 ====================
MYSQL_ROOT_PASSWORD=root123456
MYSQL_DATABASE=teamventure_main
MYSQL_CHARACTER_SET_SERVER=utf8mb4
MYSQL_COLLATION_SERVER=utf8mb4_unicode_ci
