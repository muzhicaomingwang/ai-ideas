      "name": "Plans",
      "item": [
        {
          "name": "Plans - Generate (Async)",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('HTTP 200', function () { pm.response.to.have.status(200); });",
                  "const json = pm.response.json();",
                  "pm.test('success=true', function () { pm.expect(json.success).to.eql(true); });",
                  "pm.test('plan_request_id present', function () { pm.expect(json.data && json.data.plan_request_id).to.be.a('string').and.not.empty; });",
                  "pm.environment.set('planRequestId', json.data.plan_request_id);",
                  "pm.environment.set('pollAttempt', '0');",
                  "postman.setNextRequest('Plans - Wait Until 3 Plans Ready');"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{sessionToken}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"people_count\": {{peopleCount}},\n  \"budget_min\": {{budgetMin}},\n  \"budget_max\": {{budgetMax}},\n  \"start_date\": \"{{startDate}}\",\n  \"end_date\": \"{{endDate}}\",\n  \"departure_city\": \"{{departureCity}}\",\n  \"preferences\": { \"qa_run_at\": \"{{nowIso}}\" }\n}"
            },
            "url": { "raw": "{{baseUrl}}/api/v1/plans/generate", "host": ["{{baseUrl}}"], "path": ["api", "v1", "plans", "generate"] }
          }
        },
        {
          "name": "Plans - Wait Until 3 Plans Ready",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('HTTP 200', function () { pm.response.to.have.status(200); });",
                  "const json = pm.response.json();",
                  "pm.test('success=true', function () { pm.expect(json.success).to.eql(true); });",
                  "const records = (((json || {}).data || {}).records) || [];",
                  "const attempt = parseInt(pm.environment.get('pollAttempt') || '0', 10) + 1;",
                  "pm.environment.set('pollAttempt', String(attempt));",
                  "if (records.length >= 3) {",
                  "  pm.environment.set('planId', records[0].planId || records[0].plan_id || '');",
                  "  postman.setNextRequest('Plans - List');",
                  "} else {",
                  "  const maxAttempts = parseInt(pm.environment.get('pollMaxAttempts') || '30', 10);",
                  "  const intervalMs = parseInt(pm.environment.get('pollIntervalMs') || '1000', 10);",
                  "  if (attempt >= maxAttempts) {",
                  "    pm.test('plans generated within polling window', function () {",
                  "      pm.expect(records.length, 'records.length').to.be.at.least(3);",
                  "    });",
                  "    postman.setNextRequest(null);",
                  "  } else {",
                  "    setTimeout(function () { postman.setNextRequest('Plans - Wait Until 3 Plans Ready'); }, intervalMs);",
                  "  }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{sessionToken}}" }],
            "url": {
              "raw": "{{baseUrl}}/api/v1/plans?page=1&pageSize=10",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "plans"],
              "query": [
                { "key": "page", "value": "1" },
